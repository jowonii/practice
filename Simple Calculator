def calculator():
    print("간단한 계산기입니다.")
    num1 = float(input("첫 번째 숫자를 입력하세요: "))
    operator = input("연산자 (+, -, *, /)를 입력하세요: ")
    num2 = float(input("두 번째 숫자를 입력하세요: "))

    if operator == '+':
        print(f"결과: {num1 + num2}")
    elif operator == '-':
        print(f"결과: {num1 - num2}")
    elif operator == '*':
        print(f"결과: {num1 * num2}")
    elif operator == '/':
        print(f"결과: {num1 / num2}")
    else:
        print("잘못된 연산자입니다.")

calculator()
